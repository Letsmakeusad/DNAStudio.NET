@model List<Blog.Models.Article>
@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var article in Model)
        {
            <article class="col-sm-6">
                <h2>
                    @Html.ActionLink(article.Title, "Details", "Article", new { @id = article.Id }, null)

                </h2>
                <p>
                    @article.Content
                </p>
                <footer>
                    <div class="pull-left">
                        @foreach (var tag in article.Tags)
                        {
                            @Html.ActionLink(tag.Name, "ListArticlesByTag", "Tag", new { @id = tag.id }, new { @class = "btn btn-default btn-xs " })
                        }
                    </div>
                    <small class="author pull-right">
                        --author @article.Author.FullName
                    </small>
                </footer>

            </article>
        }
    </div>
</div>
